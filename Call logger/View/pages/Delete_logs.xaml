<UserControl x:Class="Call_logger.View.pages.Delete_logs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Call_logger.View.pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Warning: Deleting the logs is irreversible and permanent! Use at your own risk!" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" FontSize="30" TextAlignment="Center" Foreground="Red" FontWeight="Bold"/>
        <Button Grid.Row="1" Content="Delete Logs" Width="300" Height="100" Name="Delete_Button" Click="Delete_Button_Click"/>
    </Grid>
</UserControl>
